/**index.wxss**/

.category-link-container {
  overflow: hidden;
  padding-right: 12px;
  margin-top: 2px;
}

.category-link {
  font-size: 14px;
  color: #47c577;
  float: right;
}

.userinfo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 12px;
  /*width: 100%;*/
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 1px solid #aaa;
}

.userinfo-nickname {
  color: #aaa;
}

.wrong-button {
  margin-top: 12px;
  margin-bottom: 4px;
}

.chapter-container {
  margin: 12px 0;
  padding: 12px;
  width: 100%;
  border-top: 1px solid #d9d9d9;
  border-bottom: 1px solid #d9d9d9;
  background-color: #fff;
  box-sizing: border-box;
}

.chapter-name {
  /*font-size: 14px;*/
}

.chapter-progress {
  margin-top: 16px;
  margin-bottom: 12px;
}

.chapter-rate {
  font-size: 13px;
  color: #47c577;
}

.chapter-count {
  font-size: 12px;
  color: #aaa;
  float: right;
}
